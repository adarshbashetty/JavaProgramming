//if
1)if
//syntax
if(condition){
	//do something
}

2)if else
//syntax
if(condition){
	//do something
}
else{
	//do something
}

3)if else if
//syntax
if(condition){
	//do something
}
else if(condition){
	//do something
}
else if(condition){
	//do something
}

